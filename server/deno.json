{
  "name": "server",
  "version": "1.0.0",
  "description": "Server that receives POST messages and streams them via WebSocket",
  "exports": "./server.ts",
  "tasks": {
    "start": "deno run --allow-net --allow-read server.ts",
    "dev": "deno run --allow-net --allow-read --watch server.ts",
    "test": "deno test --allow-net",
    "check": "deno check server.ts",
    "lint": "deno lint"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  }
}